import java.awt.EventQueue;

import javax.swing.JFrame;
import java.awt.Choice;
import javax.swing.JTable;
import javax.swing.JMenuBar;
import java.awt.Label;
import javax.swing.JTextPane;
import javax.swing.JButton;


public class MeleeGameInfo {

	private JFrame frmPlayerstats;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					MeleeGameInfo window = new MeleeGameInfo();
					window.frmPlayerstats.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public MeleeGameInfo() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frmPlayerstats = new JFrame();
		frmPlayerstats.setTitle("PlayerStats");
		frmPlayerstats.setBounds(100, 100, 602, 493);
		frmPlayerstats.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frmPlayerstats.getContentPane().setLayout(null);
		
		Choice playerChoice = new Choice();
		playerChoice.setBounds(475, 66, 93, 20);
		frmPlayerstats.getContentPane().add(playerChoice);
		
		Choice characterChoice = new Choice();
		characterChoice.setBounds(51, 66, 101, 20);
		frmPlayerstats.getContentPane().add(characterChoice);
		
		JMenuBar menuEditer = new JMenuBar();
		menuEditer.setToolTipText("cliquez pour editer les valeurs");
		menuEditer.setBounds(0, 0, 594, 21);
		frmPlayerstats.getContentPane().add(menuEditer);
		
		JButton btnEditerValeurs = new JButton("\u00C9diter les valeurs");
		menuEditer.add(btnEditerValeurs);
		
		JTextPane textPane = new JTextPane();
		textPane.setBounds(444, 265, 93, 20);
		frmPlayerstats.getContentPane().add(textPane);
		
		JTextPane textPane_1 = new JTextPane();
		textPane_1.setBounds(51, 228, 114, 20);
		frmPlayerstats.getContentPane().add(textPane_1);
